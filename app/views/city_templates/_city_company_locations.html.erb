<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Company Locations

    <a data-toggle="collapse" href="#city_company_locations_new_form">
      Add company location
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @city.company_locations.each do |company_location| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/company_locations/<%= company_location.id %>">
          <%= company_location.company_id %>
        </a>

        <a href="/delete_company_location_from_city/<%= company_location.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="city_company_locations_new_form">
        <%= render partial: "city_templates/city_company_locations_new_form" %>
      </div>
    </div>

  </ul>
</div>
