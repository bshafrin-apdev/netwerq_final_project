<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All people
    </h1>

    <a href="/people/new" class="btn btn-block btn-outline-secondary">
      Add a new person
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "person_templates/people_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Title
        </th>

        <th>
          Company
        </th>

        <th>
          Relationship
        </th>

        <th>
          Work sector
        </th>

        <th>
          City
        </th>

        <th>
          Email
        </th>

        <th>
          Phone number
        </th>

        <th>
          Contacts
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @people.each do |person| %>
      <tr>
        <td>
          <%= person.id %>
        </td>

        <td>
          <%= person.name %>
        </td>

        <td>
          <%= person.title %>
        </td>

        <td>
          <% if person.company.present? %>
            <a href="/companies/<%= person.company.id %>">
              <%= person.company.company_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= person.relationship %>
        </td>

        <td>
          <% if person.work_sector.present? %>
            <a href="/work_sectors/<%= person.work_sector.id %>">
              <%= person.work_sector.sector_name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if person.city.present? %>
            <a href="/cities/<%= person.city.id %>">
              <%= person.city.city_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= person.email %>
        </td>

        <td>
          <%= person.phone_number %>
        </td>

        <td>
          <%= person.contacts %>
        </td>

        <td>
          <%= time_ago_in_words(person.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(person.updated_at) %> ago
        </td>

        <td>
          <a href="/people/<%= person.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @people, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
