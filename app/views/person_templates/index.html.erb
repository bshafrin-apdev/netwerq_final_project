<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All people
    </h1>

    <a href="/people/new" class="btn btn-block btn-outline-secondary">
      Add a new person
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Title
        </th>

        <th>
          Company
        </th>

        <th>
          Relationship
        </th>

        <th>
          Work sector
        </th>

        <th>
          City
        </th>

        <th>
          Email
        </th>

        <th>
          Phone number
        </th>

        <th>
          Contacts
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @people.each do |person| %>
      <tr>
        <!-- Display person.id start -->
        <td>
          <%= person.id %>
        </td>
        <!-- Display person.id end -->

        <!-- Display person.name start -->
        <td>
          <%= person.name %>
        </td>
        <!-- Display person.name end -->

        <!-- Display person.title start -->
        <td>
          <%= person.title %>
        </td>
        <!-- Display person.title end -->

        <!-- Display person.company_id start -->
        <td>
          <%= person.company.company_name %>
        </td>
        <!-- Display person.company_id end -->

        <!-- Display person.relationship start -->
        <td>
          <%= person.relationship %>
        </td>
        <!-- Display person.relationship end -->

        <!-- Display person.work_sector_id start -->
        <td>
          <%= person.work_sector.sector_name %>
        </td>
        <!-- Display person.work_sector_id end -->

        <!-- Display person.city_id start -->
        <td>
          <%= person.city_id %>
        </td>
        <!-- Display person.city_id end -->

        <!-- Display person.email start -->
        <td>
          <%= person.email %>
        </td>
        <!-- Display person.email end -->

        <!-- Display person.phone_number start -->
        <td>
          <%= person.phone_number %>
        </td>
        <!-- Display person.phone_number end -->

        <!-- Display person.contacts start -->
        <td>
          <%= person.contacts %>
        </td>
        <!-- Display person.contacts end -->

        <!-- Display person.created_at start -->
        <td>
          <%= time_ago_in_words(person.created_at) %> ago
        </td>
        <!-- Display person.created_at end -->

        <!-- Display person.updated_at start -->
        <td>
          <%= time_ago_in_words(person.updated_at) %> ago
        </td>
        <!-- Display person.updated_at end -->

        <td>
          <a href="/people/<%= person.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
