<form action="/create_outreach_from_person" method="post">

  <input type="hidden" name="recipient_id" value="<%= @person.id %>">

  <div class="form-group">
    <label for="notes">
      Notes
    </label>

    <textarea id="notes" name="notes" class="form-control" rows="3"><%= @outreach.notes %></textarea>
  </div>

  <div class="form-group">
    <label for="response_tf">
      Response tf
    </label>
    <input id="response_tf" class="form-check-input" name="response_tf" type="checkbox" <%= "checked" if @outreach.response_tf %>>
  </div>

  <div class="form-group">
    <label for="outreach_method_id">
      Outreach method
    </label>

    <%= select_tag(:outreach_method_id, options_from_collection_for_select(ContactMethod.all, :id, :method_name, @outreach.outreach_method_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create outreach
  </button>
</form>
