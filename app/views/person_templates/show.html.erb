<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Person #<%= @person.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/people" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/people/<%= @person.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit person
        </a>
      </div>

      <div class="col">
        <a href="/delete_person/<%= @person.id %>" class="btn btn-block btn-outline-secondary">
          Delete person
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @person.name %>
      </dd>

      <dt>
        Title
      </dt>
      <dd>
        <%= @person.title %>
      </dd>

      <dt>
        Company
      </dt>
      <dd>
        <% if @person.company.present? %>
          <a href="/companies/<%= @person.company_id %>">
            <%= @person.company.company_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Relationship
      </dt>
      <dd>
        <%= @person.relationship %>
      </dd>

      <dt>
        Work sector
      </dt>
      <dd>
        <% if @person.work_sector.present? %>
          <a href="/work_sectors/<%= @person.work_sector_id %>">
            <%= @person.work_sector.sector_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        City
      </dt>
      <dd>
        <% if @person.city.present? %>
          <a href="/cities/<%= @person.city_id %>">
            <%= @person.city.city_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @person.email %>
      </dd>

      <dt>
        Phone number
      </dt>
      <dd>
        <%= @person.phone_number %>
      </dd>

      <dt>
        Contacts
      </dt>
      <dd>
        <%= @person.contacts %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@person.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@person.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "person_templates/person_outreaches" %>
  </div>
</div>
