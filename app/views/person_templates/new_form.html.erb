<h1>
  Add a new person
</h1>


<hr>

<form action="/create_person" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control">
  </div>

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control">
  </div>

  <div class="form-group">
    <label for="company_id">
      Company
    </label>

    <%= select_tag(:company_id, options_from_collection_for_select(Company.all, :id, :company_name, @person.company_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="relationship">
      Relationship
    </label>

    <input type="text" id="relationship" name="relationship" class="form-control">
  </div>

  <div class="form-group">
    <label for="work_sector_id">
      Work sector
    </label>

    <%= select_tag(:work_sector_id, options_from_collection_for_select(WorkSector.all, :id, :sector_name, @person.work_sector_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="city_id">
      City
    </label>

    <%= select_tag(:city_id, options_from_collection_for_select(City.all, :id, :city_name, @person.city_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="email">
      Email
    </label>

    <input type="text" id="email" name="email" class="form-control">
  </div>

  <div class="form-group">
    <label for="phone_number">
      Phone number
    </label>

    <input type="text" id="phone_number" name="phone_number" class="form-control">
  </div>

  <div class="form-group">
    <label for="contacts">
      Contacts
    </label>

    <input type="text" id="contacts" name="contacts" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create person
  </button>
</form>

<hr>

<a href="/people">
  Go back
</a>
