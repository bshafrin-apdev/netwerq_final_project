<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Company location #<%= @company_location.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/company_locations" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/company_locations/<%= @company_location.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit company location
        </a>
      </div>

      <div class="col">
        <a href="/delete_company_location/<%= @company_location.id %>" class="btn btn-block btn-outline-secondary">
          Delete company location
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Company
      </dt>
      <dd>
        <% if @company_location.company.present? %>
          <a href="/companies/<%= @company_location.company_id %>">
            <%= @company_location.company.company_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        City
      </dt>
      <dd>
        <% if @company_location.city.present? %>
          <a href="/cities/<%= @company_location.city_id %>">
            <%= @company_location.city.city_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@company_location.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@company_location.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

