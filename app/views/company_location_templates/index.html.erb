<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All company locations
    </h1>

    <a href="/company_locations/new" class="btn btn-block btn-outline-secondary">
      Add a new company location
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "company_location_templates/company_locations_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Company
        </th>

        <th>
          City
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @company_locations.each do |company_location| %>
      <tr>
        <td>
          <%= company_location.id %>
        </td>

        <td>
          <% if company_location.company.present? %>
            <a href="/companies/<%= company_location.company.id %>">
              <%= company_location.company.company_name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if company_location.city.present? %>
            <a href="/cities/<%= company_location.city.id %>">
              <%= company_location.city.city_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(company_location.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(company_location.updated_at) %> ago
        </td>

        <td>
          <a href="/company_locations/<%= company_location.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @company_locations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
