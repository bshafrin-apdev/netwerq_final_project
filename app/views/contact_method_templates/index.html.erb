<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All contact methods
    </h1>

    <a href="/contact_methods/new" class="btn btn-block btn-outline-secondary">
      Add a new contact method
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "contact_method_templates/contact_methods_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Method name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @contact_methods.each do |contact_method| %>
      <tr>
        <td>
          <%= contact_method.id %>
        </td>

        <td>
          <%= contact_method.method_name %>
        </td>

        <td>
          <%= time_ago_in_words(contact_method.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(contact_method.updated_at) %> ago
        </td>

        <td>
          <a href="/contact_methods/<%= contact_method.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @contact_methods, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
