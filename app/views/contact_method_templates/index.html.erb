<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All contact methods
    </h1>

    <a href="/contact_methods/new" class="btn btn-block btn-outline-secondary">
      Add a new contact method
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Method name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @contact_methods.each do |contact_method| %>
      <tr>
        <!-- Display contact_method.id start -->
        <td>
          <%= contact_method.id %>
        </td>
        <!-- Display contact_method.id end -->

        <!-- Display contact_method.method_name start -->
        <td>
          <%= contact_method.method_name %>
        </td>
        <!-- Display contact_method.method_name end -->

        <!-- Display contact_method.created_at start -->
        <td>
          <%= time_ago_in_words(contact_method.created_at) %> ago
        </td>
        <!-- Display contact_method.created_at end -->

        <!-- Display contact_method.updated_at start -->
        <td>
          <%= time_ago_in_words(contact_method.updated_at) %> ago
        </td>
        <!-- Display contact_method.updated_at end -->

        <td>
          <a href="/contact_methods/<%= contact_method.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @contact_methods, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
