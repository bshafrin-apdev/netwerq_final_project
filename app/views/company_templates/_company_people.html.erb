<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    People

    <a data-toggle="collapse" href="#company_people_new_form">
      Add person
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @company.people.each do |person| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/people/<%= person.id %>">
          <%= person.name %>
        </a>

        <a href="/delete_person_from_company/<%= person.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="company_people_new_form">
        <%= render partial: "company_templates/company_people_new_form" %>
      </div>
    </div>

  </ul>
</div>
