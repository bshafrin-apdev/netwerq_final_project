<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All work sectors
    </h1>

    <a href="/work_sectors/new" class="btn btn-block btn-outline-secondary">
      Add a new work sector
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "work_sector_templates/work_sectors_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sector name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @work_sectors.each do |work_sector| %>
      <tr>
        <td>
          <%= work_sector.id %>
        </td>

        <td>
          <%= work_sector.sector_name %>
        </td>

        <td>
          <%= time_ago_in_words(work_sector.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(work_sector.updated_at) %> ago
        </td>

        <td>
          <a href="/work_sectors/<%= work_sector.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @work_sectors, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
