<h1>
  Edit work sector #<%= @work_sector.id %>
</h1>

<hr>

<form action="/update_work_sector/<%= @work_sector.id %>" method="post">

  <div class="form-group">
    <label for="sector_name">
      Sector name
    </label>

    <input type="text" id="sector_name" name="sector_name" class="form-control" value="<%= @work_sector.sector_name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update work sector
  </button>
</form>

<hr>

<a href="/work_sectors">
  Go back
</a>
