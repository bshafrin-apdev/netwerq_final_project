<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All outreaches
    </h1>

    <a href="/outreaches/new" class="btn btn-block btn-outline-secondary">
      Add a new outreach
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "outreach_templates/outreaches_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipient
        </th>

        <th>
          Notes
        </th>

        <th>
          Response tf
        </th>

        <th>
          Outreach method
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @outreaches.each do |outreach| %>
      <tr>
        <td>
          <%= outreach.id %>
        </td>

        <td>
          <% if outreach.recipient.present? %>
            <a href="/people/<%= outreach.recipient.id %>">
              <%= outreach.recipient.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= outreach.notes %>
        </td>

        <td>
          <%= outreach.response_tf %>
        </td>

        <td>
          <% if outreach.outreach_method.present? %>
            <a href="/contact_methods/<%= outreach.outreach_method.id %>">
              <%= outreach.outreach_method.method_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(outreach.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(outreach.updated_at) %> ago
        </td>

        <td>
          <a href="/outreaches/<%= outreach.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @outreaches, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
