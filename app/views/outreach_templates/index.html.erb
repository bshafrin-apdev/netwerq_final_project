<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All outreaches
    </h1>

    <a href="/outreaches/new" class="btn btn-block btn-outline-secondary">
      Add a new outreach
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipient
        </th>

        <th>
          Notes
        </th>

        <th>
          Response tf
        </th>

        <th>
          Outreach method
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @outreaches.each do |outreach| %>
      <tr>
        <!-- Display outreach.id start -->
        <td>
          <%= outreach.id %>
        </td>
        <!-- Display outreach.id end -->

        <!-- Display outreach.recipient_id start -->
        <td>
          <%= outreach.recipient.name %>
        </td>
        <!-- Display outreach.recipient_id end -->

        <!-- Display outreach.notes start -->
        <td>
          <%= outreach.notes %>
        </td>
        <!-- Display outreach.notes end -->

        <!-- Display outreach.response_tf start -->
        <td>
          <%= outreach.response_tf %>
        </td>
        <!-- Display outreach.response_tf end -->

        <!-- Display outreach.outreach_method_id start -->
        <td>
          <%= outreach.outreach_method.method_name %>
        </td>
        <!-- Display outreach.outreach_method_id end -->

        <!-- Display outreach.created_at start -->
        <td>
          <%= time_ago_in_words(outreach.created_at) %> ago
        </td>
        <!-- Display outreach.created_at end -->

        <!-- Display outreach.updated_at start -->
        <td>
          <%= time_ago_in_words(outreach.updated_at) %> ago
        </td>
        <!-- Display outreach.updated_at end -->

        <td>
          <a href="/outreaches/<%= outreach.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @outreaches, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
